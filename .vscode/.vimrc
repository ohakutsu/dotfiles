" Enable syntax highlighting
syntax enable

" Enable backspace key behavior
set backspace=indent,eol,start

" Display line numbers
set number

" Search is not case-sensitive
set ignorecase

" Override set ignorecase when search contains uppercase letters
set smartcase

" Perform incremental search
set incsearch

" Highlight search results
set hlsearch

" Set the window to display the status line
set laststatus=2

" Number of colon commands to record
set history=10000

" Automatic indenting
set autoindent

" Show command on last line
set showcmd

" Displays the number of rows and columns at the cursor
set ruler
