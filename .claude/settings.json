{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0"
  },
  "permissions": {
    "allow": [
      "Bash(gh pr diff *)",
      "Bash(gh pr view *)",
      "WebFetch(domain:api.github.com)",
      "mcp__plugin_github-mcp_github_actions_readonly__*",
      "mcp__plugin_github-mcp_github_discussions_readonly__*",
      "mcp__plugin_github-mcp_github_issues__issue_read",
      "mcp__plugin_github-mcp_github_issues__list_issues",
      "mcp__plugin_github-mcp_github_issues__search_issues",
      "mcp__plugin_github-mcp_github_pull_requests__list_pull_requests",
      "mcp__plugin_github-mcp_github_pull_requests__pull_request_read",
    ],
    "deny": ["Read(./.env)", "Read(~/.ssh/**)"]
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code sent notification' -message \"${CLAUDE_PROJECT_DIR}\" -sound default"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code stopped' -message \"${CLAUDE_PROJECT_DIR}\" -sound default"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccstatusline",
    "padding": 0
  },
  "extraKnownMarketplaces": {
    "ohakutsu-plugin-marketplace": {
      "source": {
        "source": "github",
        "repo": "ohakutsu/ohakutsu-plugin-marketplace"
      }
    }
  },
  "enabledPlugins": {
    "github-mcp@ohakutsu-plugin-marketplace": true
  },
  "language": "Japanese",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false,
    "excludedCommands": ["git:*", "gh:*"]
  },
  "plansDirectory": "./.claude/plans"
}
